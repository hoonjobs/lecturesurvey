<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/survey_respondent_list_row_dept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:textColor="@color/coffee"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/survey_respondent_list_row_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:textColor="@color/chocolate"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/survey_respondent_list_row_student_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:textColor="@color/coffee"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/survey_respondent_list_row_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:textColor="@color/coffee"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="@string/survey_respondent_count"
            android:textColor="@color/coffee"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/survey_respondent_list_row_respond_cnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"            
            android:layout_marginRight="15dp"
            android:textColor="@color/chocolate"
            android:textSize="34sp" />
    </LinearLayout>

</LinearLayout>