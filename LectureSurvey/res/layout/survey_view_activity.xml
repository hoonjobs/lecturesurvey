<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <include
                android:id="@+id/activity_header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/activity_header" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp" >

                <ImageView
                    android:id="@+id/survey_view_ivStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:paddingTop="3dp"
                    android:src="@drawable/ic_alert" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/survey_view_tvDeptName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/coffee"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/survey_view_tvLectureName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="right|center_vertical"
                        android:paddingRight="5dp"
                        android:textColor="@color/light_chocolate"
                        android:textColorLink="@color/light_chocolate"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/survey_view_tvLectureDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/coffee"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/dot_line_repeat"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/survey_view_tvSurveyMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/coffee"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/survey_view_layoutStudent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical" >

                        <kr.ac.dsc.lecturesurvey.ImageBtn
                            android:id="@+id/survey_view_btnSurvey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:src="@drawable/btn_survey" />

                        <TextView
                            android:id="@+id/survey_view_tvSurveyAlertMsg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/alert_msg_survey_ready"
                            android:textColor="#ff8499"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/survey_view_layoutProf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical" >

                        <kr.ac.dsc.lecturesurvey.ImageBtn
                            android:id="@+id/survey_view_btn_manage_survey_items"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:scaleType="fitCenter"
                            android:src="@drawable/btn_manage_survey_items" />

                        <Button
                            android:id="@+id/survey_view_btn_survey_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_margin="5dp"
                            android:background="@drawable/btn_common"
                            android:scaleType="centerInside"
                            android:shadowColor="@color/chocolate"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1"
                            android:text="@string/survey_start"
                            android:textColor="#ffff"
                            android:textColorHighlight="#ffffff"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/survey_view_btn_survey_result"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/btn_common"
                            android:scaleType="centerInside"
                            android:shadowColor="@color/chocolate"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1"
                            android:text="@string/survey_result"
                            android:textColor="#ffff"
                            android:textColorHighlight="#ffffff"
                            android:textSize="24sp" />

                        <kr.ac.dsc.lecturesurvey.ImageBtn
                            android:id="@+id/survey_view_btn_delete_survey_items"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:scaleType="fitCenter"
                            android:src="@drawable/btn_delete_survey" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/spinner_layout" />

</FrameLayout>