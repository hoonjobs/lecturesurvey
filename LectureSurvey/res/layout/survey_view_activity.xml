<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/activity_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/activity_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/survey_view_ivStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:paddingTop="3dp"
            android:src="@drawable/ic_alert" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/survey_view_tvDeptName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/coffee"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/survey_view_tvLectureName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="right|center_vertical"
                android:paddingRight="5dp"
                android:textColor="@color/light_chocolate"
                android:textColorLink="@color/light_chocolate"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/survey_view_tvLectureDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:textColor="@color/coffee"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/dot_line_repeat"
                android:orientation="vertical" >
            </LinearLayout>

            <TextView
                android:id="@+id/survey_view_tvSurveyMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:textColor="@color/coffee"
                android:textSize="12sp"
                android:textStyle="bold" />

            <kr.ac.dsc.lecturesurvey.ImageBtn
                android:id="@+id/survey_view_btnSurvey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/btn_survey" />

            <TextView
                android:id="@+id/survey_view_tvSurveyAlertMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alert_msg_survey_ready"
                android:visibility="gone"
                android:gravity="center" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>